@model IEnumerable<OnlineShopping.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Product Dashboards</h1>
<table class="table">
    <tr>
        @foreach (var item in Model)
        {
            <td class="product-box">
                @Html.DisplayFor(modelItem => item.Photo) <br />
                <img src="/ProductImages/@item.Photo" width="100" height="100" /><br />
                @Html.DisplayFor(modelItem => item.Title)<br />
                @Html.DisplayFor(modelItem => item.Price)<br />
                @Html.DisplayFor(modelItem => item.Description)<br />
                @Html.DisplayFor(modelItem => item.Category.Id)<br />
                <a asp-action="Details" asp-route-id="@item.Id">Details</a><br />
            </td>
        }
    </tr>
    </tbody>
</table>
